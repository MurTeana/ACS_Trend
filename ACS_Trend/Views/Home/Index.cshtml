@model ACS_Trend.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Анализ трендов";
}

<script src="~/js/highcharts/7.1.2/highcharts.js"></script>
<script src="~/js/highcharts/7.1.2/modules/accessibility.js"></script>
<script src="~/js/highcharts/7.1.2/modules/exporting.js"></script>
<script src="~/js/highcharts/7.1.2/modules/export-data.js"></script>

<div id="div1" class="jumbotron" style="text-align:center">
    <h2>Анализ трендов динамических характеристик теплоэнергетического оборудования</h2>
</div>

<style>
    #mainline_block {
        width: 100%;
        display: flex;
    }

    #line_block {
        -webkit-flex: 1;
        flex: 1;
        background: #f1f1f1;
        float: left;
        margin: 0 0px 0px 0;
        text-align: center;
        padding: 10px;
    }

    #mainline_block2 {
        width: 100%;
        display: flex;
    }

    #line_block2 {
        -webkit-flex: 1;
        flex: 1;
        background: #f1f1f1;
        float: left;
        margin: 0 0px 0px 0;
        text-align: center;
        padding: 10px;
    }

    #mainline_block3 {
        width: 100%;
        display: flex;
    }

    #line_block3 {
        -webkit-flex: 1;
        flex: 1;
        background: #f1f1f1;
        float: left;
        margin: 0 0px 0px 0;
        text-align: center;
        padding: 10px;
    }

    #main_val_block {
        width: 100%;
        display: flex;
    }

    #val_block {
        -webkit-flex: 1;
        flex: 1;
        background: #f1f1f1;
        float: left;
        margin: 0 0px 0px 0;
        text-align: center;
        padding: 10px;
    }
</style>

<div>
    <form asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">
        <input type="file" name="file" />
        <p />
        <div id="main_val_block" class="form-group">
            <div id="val_block">
                <div class="form-group">
                    <label asp-for="StartPoint_IN" class="control-label"></label>
                    <input asp-for="StartPoint_IN" class="form-control" />
                    <span asp-validation-for="StartPoint_IN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UpperLimit_IN" class="control-label"></label>
                    <input asp-for="UpperLimit_IN" class="form-control" />
                    <span asp-validation-for="UpperLimit_IN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LowerLimit_IN" class="control-label"></label>
                    <input asp-for="LowerLimit_IN" class="form-control" />
                    <span asp-validation-for="LowerLimit_IN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimeLimit_IN" class="control-label"></label>
                    <input asp-for="TimeLimit_IN" class="form-control" />
                    <span asp-validation-for="TimeLimit_IN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="K_Approxy_IN" class="control-label"></label>
                    <input asp-for="K_Approxy_IN" class="form-control" />
                    <span asp-validation-for="K_Approxy_IN" class="text-danger"></span>
                </div>
            </div>
            <div id="val_block">
                <div class="form-group">
                    <label asp-for="StartPoint_OUT" class="control-label"></label>
                    <input asp-for="StartPoint_OUT" class="form-control" />
                    <span asp-validation-for="StartPoint_OUT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UpperLimit_OUT" class="control-label"></label>
                    <input asp-for="UpperLimit_OUT" class="form-control" />
                    <span asp-validation-for="UpperLimit_OUT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LowerLimit_OUT" class="control-label"></label>
                    <input asp-for="LowerLimit_OUT" class="form-control" />
                    <span asp-validation-for="LowerLimit_OUT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimeLimit_OUT" class="control-label"></label>
                    <input asp-for="TimeLimit_OUT" class="form-control" />
                    <span asp-validation-for="TimeLimit_OUT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="K_Approxy_OUT" class="control-label"></label>
                    <input asp-for="K_Approxy_OUT" class="form-control" />
                    <span asp-validation-for="K_Approxy_OUT" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div id="val_block">
            <input type="submit" value="Построить графики" asp-for="ProcessType" class="btn btn-primary" />
        </div>
        <p />
    </form>
</div>

<div style="width:100%; height:1px; clear:both;"></div>
<div id="mainline_block">
    <div id="line_block">
        <figure class="highcharts-figure">
            <div id="container_1_1"></div>
            <p class="highcharts-description">
                Тренд входного сигнала динамической характеристики теплоэнергетичеcкого оборудования 1_1
            </p>
        </figure>
    </div>
    <div id="line_block">
        <figure class="highcharts-figure">
            <div id="container_2_1"></div>
            <p class="highcharts-description">
                Тренд выходного сигнала динамической характеристики теплоэнергетичеcкого оборудования 2_1
            </p>
        </figure>
    </div>
</div>
<div style="width:100%; height:1px; clear:both;"></div>
<div>
    <hr />
    <form asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">
        <p />
        <div class="form-group">

            <input type="submit" value="Сохранить результаты" asp-for="ProcessType" class="btn btn-primary" />
        </div>
    </form>
    <hr />
</div>
<div id="mainline_block2">
    <div id="line_block2">
        <figure class="highcharts-figure">
            <div id="container_1_2"></div>
            <p class="highcharts-description">
                График сглаженных значений исходного тренда входного сигнала + точки 1_2
            </p>
        </figure>
    </div>
    <div id="line_block2">
        <figure class="highcharts-figure">
            <div id="container_2_2"></div>
            <p class="highcharts-description">
                График сглаженных значений исходного тренда выходного сигнала + точки 2_2
            </p>
        </figure>
    </div>
</div>
<div id="mainline_block3">
    <div id="line_block3">
        <figure class="highcharts-figure">
            <div id="container_1_3"></div>
            <p class="highcharts-description">
                График производных входного сигнала
            </p>
        </figure>
    </div>
    <div id="line_block3">
        <figure class="highcharts-figure">
            <div id="container_2_3"></div>
            <p class="highcharts-description">
                График производных выходного сигнала
            </p>
        </figure>
    </div>
</div>
<div style="width:100%; height:1px; clear:both;"></div>
<hr />

<script>
    Highcharts.chart('container_1_1', {
        chart: {
            type: 'line',
            zoomType: 'x'
        },
        title: @Html.Raw(Json.Serialize(Model.LineChartData_IN_Source.title)),
        subtitle: @Html.Raw(Json.Serialize(Model.LineChartData_IN_Source.subtitle)),
        xAxis: @Html.Raw(Json.Serialize(Model.LineChartData_IN_Source.xAxis)),
        yAxis: @Html.Raw(Json.Serialize(Model.LineChartData_IN_Source.yAxis)),
        plotOptions: @Html.Raw(Json.Serialize(Model.LineChartData_IN_Source.plotOptions)),
        series: [@Html.Raw(Json.Serialize(Model.LineChartData_IN_Source.series))],
        exporting: {
            buttons: {
                contextButton: {
                    enabled: false
                },
                viewButton: {
                    text: 'Вид',
                    menuItems: [
                        'viewFullscreen',
                    ]
                },
                exportButton: {
                    text: 'Скачать',
                    menuItems: [
                        'downloadPNG',
                        'downloadJPEG',
                        'downloadPDF',
                        'downloadSVG'
                    ]
                },
                printButton: {
                    text: 'Печать',
                    onclick: function () {
                        this.print();
                    }
                }
            }
        }
    });
</script>


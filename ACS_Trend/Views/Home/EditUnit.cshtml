@model ACS_Trend.Models.UnitViewModel

@{
    ViewData["Title"] = "EditUnit";
}

<h1>EditUnit</h1>

<h4>UnitViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUnit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Unit" />
            <div class="form-group">
                <label asp-for="Unit_name" class="control-label"></label>
                <input asp-for="Unit_name" class="form-control" />
                <span asp-validation-for="Unit_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllUnits">Back to List</a>
</div>


@model ACS_Trend.Models.TrendPointViewModel

@{
    ViewData["Title"] = "TREND_POINTS_Create";
}

<h1>TREND_POINTS_Create</h1>

<h4>TrendPointViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TREND_POINTS_Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date_time" class="control-label"></label>
                <input asp-for="Date_time" class="form-control" />
                <span asp-validation-for="Date_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parameter" class="control-label"></label>
                <input asp-for="Parameter" class="form-control" />
                <span asp-validation-for="Parameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trend.T_ID_Station" class="control-label"></label>
                @Html.DropDownList("Trend.T_ID_Station", ViewBag.Stations as SelectList, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Trend.T_ID_Station" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trend.T_ID_Trend_parameter" class="control-label"></label>
                @Html.DropDownList("Trend.T_ID_Trend_parameter", ViewBag.Trend_parameters as SelectList, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Trend.T_ID_Trend_parameter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trend.T_ID_Unit" class="control-label"></label>
                @Html.DropDownList("Trend.T_ID_Unit", ViewBag.Units as SelectList, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Trend.T_ID_Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


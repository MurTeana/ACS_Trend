@model IEnumerable<ACS_Trend.Domain.Entities.Unit>

@{
    ViewData["Title"] = "UNITS";
}

<h1>Единицы измерения</h1>

<p>
    <a asp-action="UNITS_Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Unit_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Unit_name)
            </td>
            <td>
                <a asp-action="UNITS_Edit" asp-route-id="@item.ID_Unit">Edit</a> |
                <a asp-action="UNITS_Details" asp-route-id="@item.ID_Unit">Details</a> |
                <a asp-action="UNITS_Delete" asp-route-id="@item.ID_Unit">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
